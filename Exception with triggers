CREATE OR REPLACE TRIGGER check_word_length
AFTER INSERT ON AGENT
FOR EACH ROW
DECLARE
    word_length NUMBER;
    V_TITLE VARCHAR2(40);
    TITLE_TOO_SHORT EXCEPTION;
BEGIN
    
    V_TITLE := :NEW.AGENT_NAME;
    word_length := LENGTH(V_TITLE);
    
    IF word_length < 5 THEN
        RAISE TITLE_TOO_SHORT;
    END IF;
    DBMS_OUTPUT.PUT_LINE('TITLE INPUT: '  V_TITLE);

EXCEPTION
    WHEN TITLE_TOO_SHORT THEN
        DBMS_OUTPUT.PUT_LINE('This Name less than 5');
    WHEN OTHERS THEN
    DBMS_OUTPUT.PUT_LINE('ERROR: '  SQLERRM);
END;
